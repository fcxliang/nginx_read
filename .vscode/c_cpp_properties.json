{
    "configurations": [
        {
            "name": "MacOS",
            "includePath": [
                "${workspaceFolder}/**",
                "/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include/**"
                ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "compilerPath": "/usr/bin/gcc",
            "compilerArgs": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "\"${fileDirname}\\${fileBasenameNoExtension}.exe"
            ]
        }
    ],
    "version": 4
}